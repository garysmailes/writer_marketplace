<%# app/views/shared/_account_notices.html.erb %>
<%# ------------------------------------------------------------------ %>
<%# Account notices (governance-critical UX)                            %>
<%# ------------------------------------------------------------------ %>
<%# Signed-in users can browse immediately, but must verify email to     %>
<%# unlock active actions (messaging, posting, bidding, reviews).        %>
<%# This partial makes the requirement visible and predictable.          %>

<% if authenticated? && Current.user.present? && !Current.user.verified_email? %>
  <div class="notice">
    <strong>Please verify your email to activate your account.</strong>
    <span>You can browse and read profiles, but messaging and posting are disabled until verification.</span>

    <%= button_to "Resend verification email",
                  resend_email_verification_path,
                  method: :post %>
  </div>
<% end %>
